<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_layout"
    android:layout_height="94dp"
    android:layout_width="match_parent">

    <!-- Vista inferior del producto (lo que queremos mostrar al deslizar) -->
    <LinearLayout
        android:background="@color/colorBackgroundSecondary"
        android:id="@+id/product_menu"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
            android:background="#5D4037"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_width="94dp"
            android:text="+5"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <TextView
            android:background="#4E342E"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_width="94dp"
            android:text="+10"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <TextView
            android:background="#3E2723"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_width="94dp"
            android:text="+50"
            android:textColor="#ffffff"
            android:textSize="24sp" />
    </LinearLayout>

    <!-- Vista superior del producto -->
    <RelativeLayout
        android:background="@color/colorBackgroundPrimary"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="14dp">

        <TextView
            android:id="@+id/product_stock"
            android:background="@drawable/rounded_corner"
            android:gravity="right"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="1dp"
            android:paddingBottom="1dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="9999"
            android:textColor="@color/colorTextTertiary"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/product_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/product_stock"
            android:layout_toStartOf="@id/product_stock"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_marginBottom="4dp"
            android:text="Marca y modelo"
            android:textColor="@color/colorTextPrimary"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/product_description"
            android:ellipsize="end"
            android:layout_below="@id/product_title"
            android:layout_toLeftOf="@id/product_stock"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:maxLines="2"
            android:text="DescripciÃ³n"
            android:textColor="@color/colorTextSecondary"
            android:textSize="15sp"/>
    </RelativeLayout>

</com.daimajia.swipe.SwipeLayout>