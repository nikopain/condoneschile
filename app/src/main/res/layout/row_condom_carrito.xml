<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewRowName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            tools:text="LifeStyles Ultra Delgado" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textViewRowStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            tools:text="100+"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textViewRowDescriptionn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            tools:text="más delgado que un preservativo de látex standard, otorgando una sensación más natural, más sensibilidad."/>

    </LinearLayout>
</LinearLayout>